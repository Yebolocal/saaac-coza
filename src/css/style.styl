@import 'imports/*'
@import '../../node_engine/*/ne-imports/style'

// Set the Breakpoints
bp = 960px

// Set the fonts later use // font-family font1

font1 = 'Asap', sans-serif

// The global styles

html
  font-size 1em
  color grey
  font-family font1
  word-wrap: break-word

body
  background url("/images/saaac-tile-big.jpg") fixed
  padding 0
  margin 0
  display block

textarea
  width:100%;
  color #000

a
  color #00B7FF

select
  color grey

a:hover
  color purple

.f1
    font-family font1

h1
  margin 0
  padding 0

input {
  border: inset;
  border-color: #535d65;
  color: #808080;
}
input:focus {
  border-color: #ffa500;
  color: #000;
}

.input-text-fill
  width 98%


.dataListItem
  background #fff
  border-radius 10px
  lost-column: 1/3 3 10px
  text-align center
  margin-top 20px
  margin-bottom 20px
  zb2()

.dataListItem:hover
  transition box-shadow 0.5s
  zb5()

.dataListItemInner
  padding 20px
  min-height 80px

