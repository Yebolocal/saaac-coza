#section-footer
  background grey
  padding-top 50px

.footer-colleges
  min-height 20px
  lost-column: 1/4 0 0
  +below(777px)
    lost-column: 1/2 0 0
  +below(480px)
    margin-top 70px
    lost-column: 1/1 0 0

.footer-faculties
  min-height 20px
  lost-column: 1/4 0 0
  +below(777px)
    lost-column: 1/2 0 0
  +below(480px)
    margin-top 70px
    lost-column: 1/1 0 0

.footer-contact
  min-height 20px
  lost-column: 2/4 0 0
  +below(777px)
    margin-top 70px
    lost-column: 1/1 0 0


.footer-heading
  text-transform uppercase
  margin-left 30px
  color #fff

.footer-contact-input
  border-radius 15px
  line-height 1.8em
  padding-left 10px
  padding-right 10px
  border: thin !important
  float right

.footer-contact-input:focus
  background yellow

.footer-contact-input:hover
  opacity 0.9
  zb5()
  transition opacity  0.5s, box-shadow 0.25s

.footer-contact-submit
  border: thin !important
  background yellow
  margin-top 20px
  border-radius 15px
  line-height 2.5em
  width: 40%;
  float right
  color black

.footer-contact-submit:hover
  background green
  color #fff
  zb5()
  transition background 0.5s, box-shadow 0.25s

.footer-contact-inner
  padding 40px

.footer-contact-label
  color white
  float right
  padding-right 30px

.footer-copyright
  color #fff
  min-height 100px
  lost-align: center



